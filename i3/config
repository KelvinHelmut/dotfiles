# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

font pango:Droid Sans 10px

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvt -e bash -c "tmux -q has-session && exec tmux attach-session -d || exec tmux new-session -s$USER" #i3-sensible-terminal
bindsym Mod1+Control+t exec urxvt

# kill focused window
bindsym $mod+q kill

# ASIGNAR LOS ESPACIOS DE TRABAJO A VARIABLES
#=============================================
set $WS1 1
set $WS2 2
set $WS3 3
set $WS4 4
set $WS5 5
set $WS6 6
set $WS7 7
set $WS8 8
set $WS9 9
set $WS0 10
#--------------------------------------------

# WINDOW CONTROL
## Float everything
for_window [window_role="pop-up"] floating enable,move absolute center
for_window [class="mplayer2|Lxappearance|Gpicview|XCalc"] floating enable
for_window [class="Pidgin"] floating enable
for_window [title="Lista de amigos"] floating disable
for_window [instance="chrome_app_list"] floating enable

assign [instance="Navigator|chromium|google-chrome"] $WS2
assign [class="Gimp|Eclipse|Blender|jetbrains-studio"] $WS5
assign [title="Eclipse |Eclipse|SDK de Eclipse " class="Java"] $WS5
assign [class="VirtualBox|Spotify"] $WS6
assign [class="libreoffice*|Evince"] $WS7
assign [class="Liferea|Pidgin"] $WS8
assign [class="JDownloader"] $WS9
assign [class="Spotify|spotify"] $WS0
assign [instance="Spotify|spotify"] $WS0

bindsym Mod1+Tab focus right


# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

# split in horizontal orientation
# bindsym $mod+Right split horizontal

# split in vertical orientation
# bindsym $mod+Down split vertical

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen
#bindsym $mod+Shift+f fullscreen global

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+y layout stacking
# bindsym $mod+u layout tabbed
#bindsym $mod+d layout toggle split
bindsym $mod+i layout toggle 

# toggle tiling / floating
bindsym $mod+s floating toggle

# change focus between tiling / floating windows
bindsym $mod+Tab focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

workspace_auto_back_and_forth yes
bindsym $mod+Escape workspace back_and_forth

# switch to workspace
bindsym $mod+1 workspace $WS1
bindsym $mod+2 workspace $WS2
bindsym $mod+3 workspace $WS3
bindsym $mod+4 workspace $WS4
bindsym $mod+5 workspace $WS5
bindsym $mod+6 workspace $WS6
bindsym $mod+7 workspace $WS7
bindsym $mod+8 workspace $WS8
bindsym $mod+9 workspace $WS9
bindsym $mod+0 workspace $WS0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $WS1
bindsym $mod+Shift+2 move container to workspace $WS2
bindsym $mod+Shift+3 move container to workspace $WS3
bindsym $mod+Shift+4 move container to workspace $WS4
bindsym $mod+Shift+5 move container to workspace $WS5
bindsym $mod+Shift+6 move container to workspace $WS6
bindsym $mod+Shift+7 move container to workspace $WS7
bindsym $mod+Shift+8 move container to workspace $WS8
bindsym $mod+Shift+9 move container to workspace $WS9
bindsym $mod+Shift+0 move container to workspace $WS0

set $optconf Preciona la letra [L]reload i3    [R]reiniciar i3
mode "$optconf" {
    bindsym l reload mode "default"
    bindsym r restart mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+r mode "$optconf"

bindsym Mod1+h resize shrink width 10px or 10ppt
bindsym Mod1+j resize grow height 10px or 10ppt
bindsym Mod1+k resize shrink height 10px or 10ppt
bindsym Mod1+l resize grow width 10px or 10ppt

bar {
    status_command ~/.i3/i3bar
    position top
    font pango:Ubuntu Mono 12px
    colors {
        statusline #000000
        background #000000
        focused_workspace  #000000 #000000 #00bbee
        active_workspace   #000000 #000000 #696f89
        inactive_workspace #000000 #000000 #555555
        urgent_workspace   #5a1f1e #5a1f1e #cc9393
        #                   border  backgr  text
    }
}

#==============================
# Borde estilo
new_float normal
new_window none

#Colores
#                       borde   backgr  texto   borde_salida
client.focused          #000000 #000000 #ffffff #900000
client.urgent           #5a1f1e #5a1f1e #cc9393
client.focused_inactive #000000 #000000 #999999
client.unfocused        #000000 #000000 #555555 

# mouse
focus_follows_mouse no 

# Focus wrapping
# force_focus_wrapping yes

# popup en modo pantalla completa
popup_during_fullscreen smart

# retrasar urgencia
force_display_urgency_hint 500 ms

# scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad


#==============================
# Applications
bindsym $mod+e exec nautilus
bindsym $mod+c exec --no-startup-id xcalc

# Actions
# Control de mpd con ncmpcpp
bindsym $mod+Control+Right exec ncmpcpp next
bindsym $mod+Control+Left exec ncmpcpp prev
bindsym $mod+p exec ncmpcpp toggle
bindsym $mod+KP_Add exec ncmpcpp volume +5
bindsym $mod+KP_Subtract exec ncmpcpp volume -5
bindsym Print exec --no-startup-id $DOTFILES/scripts/screenshot
# Control de volumen
bindsym XF86AudioRaiseVolume exec --no-startup-id $DOTFILES/scripts/volume up
bindsym XF86AudioLowerVolume exec --no-startup-id $DOTFILES/scripts/volume down
bindsym XF86AudioMute exec --no-startup-id $DOTFILES/scripts/volume toggle

bindsym $mod+Right workspace next_on_output
bindsym $mod+Left workspace prev_on_output
